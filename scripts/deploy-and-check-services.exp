        send "docker-compose logs --tail=30 medusa-backend\r"
        expect "# "
        send "echo '=== Recent nginx logs (last 20 lines) ==='\r"
        expect "# "
        send "docker-compose logs --tail=20 nginx\r"
        expect "# "
        send "exit\r"
    }
    timeout {
        puts "Connection timeout"
        exit 1
    }
