            "Total reclaimed space:" {
                send "echo 'Cleanup completed'\r"
                exp_continue
            }
            "# " {
                send "echo 'Cleanup done'\r"
                exp_continue
            }
        }
        expect "# "
        send "echo ''\r"
        expect "# "
        send "echo '=== Stopping medusa-backend ==='\r"
        expect "# "
        send "docker-compose stop medusa-backend\r"
        expect "# "
        send "echo ''\r"
        expect "# "
        send "echo '=== Pulling Latest Image ==='\r"
        expect "# "
        send "docker pull ghcr.io/khoinguyent/icfix-backend:latest\r"
        expect {
            "Downloaded" {
                send "echo 'Image downloaded'\r"
                exp_continue
            }
            "already up to date" {
                send "echo 'Image already up to date'\r"
                exp_continue
            }
