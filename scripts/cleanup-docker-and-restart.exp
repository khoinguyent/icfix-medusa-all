        send "echo ''\r"
        expect "# "
        send "echo '=== Checking Status ==='\r"
        expect "# "
        send "sleep 3\r"
        expect "# "
        send "docker-compose ps medusa-backend\r"
        expect "# "
        send "echo ''\r"
        expect "# "
        send "echo '=== Recent Logs ==='\r"
        expect "# "
        send "docker-compose logs --tail=20 medusa-backend\r"
        expect "# "
        send "echo ''\r"
        send "exit\r"
    }
    timeout {
        puts "Connection timeout"
        exit 1
    }
